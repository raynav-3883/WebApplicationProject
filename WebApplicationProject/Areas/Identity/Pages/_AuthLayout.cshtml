@{
	Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-centre">
	<div class="col-5 mt-5">
		<div class="card-login-logout-card">
			<div class="card-header">
				<ul class="nav nav-tabs card-header-tabs">
					<li class="nav-items">
						<a class="nav-link" href="/Identity/Account/Login" style="color: white;">
						Login	
						</a>
					</li>
					<li class="nav-items">
						<a class="nav-link" href="/Identity/Account/Register"  style=" color:antiquewhite;">
							Registeration
						</a>
					</li>
				</ul>
			</div>
			<div class="card-body">
				<div class="row justify-content-center">
					<div class="col-16 my-8">
						@RenderBody()
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
@section Scripts{
	@await RenderSectionAsync("Scripts", required: false)
}
<script>
	$(function () {
		const currentPage = location.pathname;
		$('.nav-tabs li a').each(function () {
			const $this = $(this);
			if(currentPage.toLowerCase().indexOf($this.attr('href').toLowerCase())!==1{
				$this.addClass('active');

			}
		})
	})
</script>